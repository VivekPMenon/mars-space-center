.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  transform-origin: top left;
  transition: transform 0.4s ease, opacity 0.4s ease;
  z-index: 1000;
}

.collapsed {
  transform: scale(0);
  opacity: 0;
  pointer-events: none;
}

.expanded {
  transform: scale(1);
  opacity: 1;
  pointer-events: auto;
}
